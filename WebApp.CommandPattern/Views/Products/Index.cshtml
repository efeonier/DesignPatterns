@model IEnumerable<WebApp.CommandPattern.Entities.Product>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Index</h1>
<p>
    <a class="btn btn-primary" asp-action="CreateFile" asp-route-type="@((int)FileType.Excel)">Create Excel</a>
    <a class="btn btn-secondary" asp-action="CreateFile" asp-route-type="@((int)FileType.Pdf)">Create Pdf</a>
    <a class="btn btn-info" asp-action="CreateFiles">Create Excel and Pdf</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
        </tr>
    }
    </tbody>
</table>